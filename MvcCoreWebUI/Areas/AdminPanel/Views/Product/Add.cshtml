@model ProductForAddDto
<link href="~/panel/css/dropzone.min.css" rel="stylesheet" />
<form asp-controller="Product" asp-action="Add" enctype="multipart/form-data">
    <div class="row my-4">
        <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-lg-6 col-7">
                            <h6>Projects</h6>
                            <p class="text-sm mb-0">
                                <i class="fa fa-check text-info" aria-hidden="true"></i>
                                <span class="font-weight-bold ms-1">30 done</span> this month
                            </p>
                        </div>
                        <div class="col-lg-6 col-5 my-auto text-end">
                            <div class="dropdown float-lg-end pe-4">
                                <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-ellipsis-v text-secondary"></i>
                                </a>
                                <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Action</a></li>
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                                    <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">

                    <div class="row m-2">

                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Ürün Adı">
                        </div>

                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Özellikler">
                        </div>

                        <div class="form-group">
                            <label asp-for="Description">Açıklama</label>
                            <textarea id="editor" asp-for="Description"></textarea>
                        </div>

                    </div>
                    <div class="row m-3">
                        <div action="/file-upload" class="dropzone">
                            <div class="fallback">
                                <input name="files" type="file" multiple />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="row">
                <div class="card h-100 mb-2">
                    <div class="card-header pb-0 p-3">
                        <h6 class="mb-0">Platform Settings</h6>
                    </div>
                    <div class="card-body p-3">
                        @*<h6 class="text-uppercase text-body text-xs font-weight-bolder">Account</h6>*@
                        <ul class="list-group">
                            <li class="list-group-item border-0 px-0">
                                <h6 class="text-uppercase text-body text-xs font-weight-bolder">Account</h6>
                                <div class="form-group">
                                    <input asp-for="Price" class="form-control" placeholder="Fiyatı">
                                </div>
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <div class="form-group">
                                    <input asp-for="Stock" class="form-control" placeholder="Stok Adeti">
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card h-100">
                    <div class="card-header pb-0 p-3">
                        <h6 class="mb-0">Platform Settings</h6>
                    </div>
                    <div class="card-body p-3">
                        <ul class="list-group">
                            <li class="list-group-item border-0 px-0">
                                <div class="form-check form-switch ps-0">
                                    <input asp-for="IsHome" class="form-check-input ms-auto">
                                    <label asp-for="IsHome" class="form-check-label text-body ms-3 text-truncate w-40 mb-0">Anasayfa</label>
                                </div>
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <div class="form-check form-switch ps-0">
                                    <input asp-for="IsTopSelling" class="form-check-input ms-auto">
                                    <label asp-for="IsTopSelling" class="form-check-label text-body ms-3 text-truncate w-40 mb-0">Çok Satanlar</label>
                                </div>
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <div class="form-check form-switch ps-0">
                                    <input asp-for="IsNewProduct" class="form-check-input ms-auto">
                                    <label asp-for="IsNewProduct" class="form-check-label text-body ms-3 text-truncate w-40 mb-0">Yeni Ürün</label>
                                </div>
                            </li>
                            <li class="list-group-item border-0 px-0">
                                <div class="form-check form-switch ps-0">
                                    <input asp-for="IsActive" class="form-check-input ms-auto">
                                    <label asp-for="IsActive" class="form-check-label text-body ms-3 text-truncate w-40 mb-0">Aktif</label>
                                </div>
                            </li>
                        </ul>
                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script src="~/panel/js/dropzone.min.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>