@model UserForLoginDto
<form asp-controller="Account" asp-action="Login">
    <div class="form-group">
        <label asp-for="Email">E-posta adresi</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" class="form-control">
    </div> End .form-group 

    <div class="form-footer">
        <button type="submit" class="btn btn-outline-primary-2">
            <span>Giriş Yap</span>
            <i class="icon-long-arrow-right"></i>
        </button>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="signin-remember-2">
            <label class="custom-control-label" for="signin-remember-2">Hatırla Beni</label>
        </div>

        <a href="#" class="forgot-link">Şifremi Unuttum?</a>
    </div>
</form>